@model Universal_Chat_Plugin.Models.Login
@{
    Layout = null;
}
@Styles.Render("~/Content/css")
@Scripts.Render("~/bundles/modernizr")
<style>
    body {
        background-image: url('/image/i.jpg');
        background-repeat: no-repeat;
        background-attachment: fixed;
        background-size: 100% 100%;
    }
</style>
<div class="navbar navbar-inverse navbar-fixed-top">
    <div class="container">
        <div class="navbar-header">
            <div class="top">
                <ul class="nav navbar-nav">
                    <h3 style="color:white">Universal-Chat-Plugin</h3>
                </ul>
                <div class="top-right">
                    <p style="padding-left:900px">
                        <a href="/Home/UserRegistration" class="btn btn-danger">Register user</a>
                    </p>
                </div>
            </div>
            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>
        </div>
    </div>
</div>
<div style="align-content: center; padding-top: 150px;">
    <center style="border:double;">
        <form action="/Login/Index?returnUrl=@Request.QueryString["ReturnUrl"]" method="post">
                <h3><p style="text-align:center;background-color:goldenrod" class="text-danger">@TempData["msg"]</p></h3><br />
                <h4><b><p style="color:red; align-content:center;">@ViewBag.Error</p>
                <input class="form-control text-box single-line" type="text" name="Username" placeholder="Username" value="" /><br />
                <p style="color:red; align-content:center;">@Html.ValidationMessageFor(model => model.Username, "", new { @class = "text-danger" })</p>
                <input class="form-control text-box single-line" type="password" name="Password" placeholder="Password" value="" /><br />
                <p style="color:red; align-content:center;">@Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })</p></b>
                <input style="color:brown" class="btn btn-group-justified" type="submit" name="submit" value="Login" /></h4>
        </form>
    </center>
</div>

